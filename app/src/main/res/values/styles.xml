<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
        <item name="android:textColor">@color/baseColor</item>
        <item name="android:textColorHint">@color/baseColor</item>
        <item name="android:textColorPrimary">@color/baseColor</item>
        <item name="android:textColorSecondary">@color/middleColor</item>
        <item name="android:textColorTertiary">@color/highlightColor</item>
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="android:actionBarTabBarStyle">@style/actionBarTab</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:popupMenuStyle">@style/listPopup</item>
        <!--<item name="android:dropDownListViewStyle">@style/listDropDown</item>-->
        <item name="android:actionBarWidgetTheme">@style/Theme.stylingActionBar.widget</item>
    </style>

    <style name="Theme.stylingActionBar.widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/listPopup</item>
        <!--<item name="android:dropDownListViewStyle">@style/listDropDown</item>-->
    </style>


    <style name="actionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/baseColor</item>
        <item name="android:backgroundStacked">@color/middleColor</item>
        <item name="android:backgroundSplit">@color/highlightColor</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="actionBarTab" parent="android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/listitem_background</item>
    </style>

    <style name="listFont" parent="android:style/Widget.ListView">
        <item name="android:textColor">@color/textHeader</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="listPopup" parent="android:Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/textHeader</item>
    </style>

    <!--<style name="listDropDown" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/listitem_background</item>
    </style>-->

    <style name="button" parent="android:Widget.Button">
        <item name="android:textColor">@color/textHeader</item>
        <item name="android:background">@color/selectionDark</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
    </style>

    <style name="textWhite">
        <item name="android:textColor">@color/textHeader</item>
    </style>

    <style name="textBlue">
        <item name="android:textColor">#012968</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/listitem_background</item>
    </style>

    <style name="ListDrawer">
        <item name="android:background">@drawable/drawergradient</item>
    </style>

    <style name="backgroundGrey">
        <item name="android:background">#AAA</item>
    </style>
</resources>
