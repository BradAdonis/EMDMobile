<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
        <item name="android:textColor">#012968</item>
        <item name="android:textColorHint">#012968</item>
        <item name="android:textColorPrimary">#012968</item>
        <item name="android:textColorSecondary">#012968</item>
        <item name="android:textColorTertiary">#012968</item>
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="android:popupMenuStyle">@style/menuTextStyle</item>
        <item name="android:actionDropDownStyle">@style/menuTextStyle</item>
    </style>

    <style name="actionBarOptions">
        <item name="android:background">#012968</item>
        <item name="android:popupBackground">#012968</item>
    </style>

    <style name="menuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:background">#fff</item>
        <item name="android:popupBackground">#fff</item>
    </style>

    <style name="menuTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:background">#fff</item>
        <item name="android:popupBackground">#fff</item>
    </style>

    <style name="dropMenuStyle" parent="android:Widget.Holo.Light.ListView.DropDown">
        <item name="android:background">#fff</item>
        <item name="android:popupBackground">#fff</item>
    </style>

    <style name="actionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#012968</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="listFont" parent="android:style/Widget.ListView">
        <item name="android:textColor">#f3f3f3</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="textWhite">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="textBlue">
        <item name="android:textColor">#012968</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/listitem_background</item>
    </style>

    <style name="ListDrawer">
        <item name="android:background">@drawable/drawergradient</item>
    </style>

    <style name="backgroundGrey">
        <item name="android:background">#AAA</item>
    </style>
</resources>
